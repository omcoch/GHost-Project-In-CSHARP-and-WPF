<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
         Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Content="כניסת לקוח" Grid.Column="1" HorizontalAlignment="Left" Margin="120,127,0,0" Grid.Row="1" VerticalAlignment="Top" Width="135" Height="55"/>
        <Button Content="כניסת מארח" Grid.Column="0" HorizontalAlignment="Left" Margin="145,127,0,0" Grid.Row="1" VerticalAlignment="Top" Width="135" Height="55"/>
    </Grid>

</Window>
