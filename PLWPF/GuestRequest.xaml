<Window x:Class="PLWPF.GuestRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="דרישת לקוח" Height="450" Width="800">
    <Grid>
        <Label Content="שם פרטי" HorizontalAlignment="Left" Margin="610,87,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft"/>
        <Label Content="שם משפחה" HorizontalAlignment="Left" Margin="610,113,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft"/>
        <Label Content="כתובת דואר אלקטרוני" HorizontalAlignment="Left" Margin="610,139,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft" RenderTransformOrigin="0.511,0.463"/>
        <Label Content="אזור נופש רצוי" HorizontalAlignment="Left" Margin="610,165,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft"/>
        <Label Content="תת אזור נופש רצוי" HorizontalAlignment="Left" Margin="402,165,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft"/>
        <Label Content="סוג יחידת אירוח" HorizontalAlignment="Left" Margin="610,191,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft"/>
        <Label Content="מס' מבוגרים" HorizontalAlignment="Left" Margin="610,217,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft"/>
        <Label Content="מס' ילדים" HorizontalAlignment="Left" Margin="402,217,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft" RenderTransformOrigin="-2.152,-0.321"/>
        <TextBox HorizontalAlignment="Left" Margin="259,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" Width="200" Name="PrivateName" KeyUp="PrivateName_KeyUp"/>
        <TextBox HorizontalAlignment="Left" Margin="259,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" Width="200" Name="FamilyName"/>
        <TextBox HorizontalAlignment="Left" Margin="259,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" Width="200" Name="Email"/>
        <TextBox HorizontalAlignment="Left" Margin="259,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" Width="100" Name="SubArea"/>
        <TextBox HorizontalAlignment="Left" Margin="337,221,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="17" Width="33" Name="ChildrenNum" KeyDown="ChildrenNum_KeyDown"/>
        <ComboBox HorizontalAlignment="Left" Margin="511,169,0,0" VerticalAlignment="Top" Width="84" Name="Area"/>
        <CheckBox Content="מעוניין בבריכה" HorizontalAlignment="Left" Margin="610,269,0,0" VerticalAlignment="Top"  Name="Pool"/>
        <CheckBox Content="מעוניין בג'קוזי" HorizontalAlignment="Left" Margin="610,295,0,0" VerticalAlignment="Top" Name="Hottub"/>
        <CheckBox Content="מעוניין בגינה" HorizontalAlignment="Left" Margin="337,269,0,0" VerticalAlignment="Top"  Name="Garden"/>
        <CheckBox Content="מעוניין באטרקציות לילדים" HorizontalAlignment="Left" Margin="337,295,0,0" VerticalAlignment="Top" Name="Atractions" />
        <Label Content="מחיר מבוקש" HorizontalAlignment="Left" Margin="610,243,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="511,248,0,0" VerticalAlignment="Top" Width="84" Name="Price"/>
        <TextBox HorizontalAlignment="Left" Margin="562,221,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="17" Width="33" Name="AdultsNum"/>
        <ComboBox HorizontalAlignment="Left" Margin="511,194,0,0" VerticalAlignment="Top" Width="84" Name="Type"/>
        <Button Content="צור דרישת  לקוח חדשה" Margin="278,356,0,0" VerticalAlignment="Top" Width="228" Height="30" Click="Send_Request" Foreground="White" FontSize="16" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch">
            <Button.Background>
                <SolidColorBrush Color="#FF007BFF"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="PrivateNameMessage" HorizontalAlignment="Left" Margin="76,97,0,0" TextWrapping="Wrap" Text="שם פרטי יכול להכיל רק אותיות" VerticalAlignment="Top" Foreground="#FFFC2F2F" TextDecorations="{x:Null}" FontFamily="Tahoma"/>
        <TextBlock x:Name="FamilyNameMessage" HorizontalAlignment="Left" Margin="60,125,0,0" TextWrapping="Wrap" Text="שם משפחה יכול להכיל רק אותיות" VerticalAlignment="Top" Foreground="#FFFC2F2F" TextDecorations="{x:Null}" FontFamily="Tahoma"/>
        <TextBlock x:Name="NumbersMessage" HorizontalAlignment="Left" Margin="135,221,0,0" TextWrapping="Wrap" Text="הכנס מספרים בלבד" VerticalAlignment="Top" Foreground="#FFFC2F2F" TextDecorations="{x:Null}" FontFamily="Tahoma"/>
        <TextBlock x:Name="SubAreaMessage" HorizontalAlignment="Left" Margin="52,177,0,0" TextWrapping="Wrap" Text="תת אזור נופש יכול להכיל רק אותיות" VerticalAlignment="Top" Foreground="#FFFC2F2F" TextDecorations="{x:Null}" FontFamily="Tahoma"/>
        <TextBlock x:Name="EmailMessage" HorizontalAlignment="Left" Margin="69,151,0,0" TextWrapping="Wrap" Text="כתובת דואר אלקטרוני לא תקינה" VerticalAlignment="Top" Foreground="#FFFC2F2F" TextDecorations="{x:Null}" FontFamily="Tahoma"/>
    </Grid>
</Window>
