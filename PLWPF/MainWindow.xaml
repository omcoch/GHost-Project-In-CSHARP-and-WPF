<Window  Style="{StaticResource WindowStyle}" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF" x:Class="PLWPF.MainWindow"
        xmlns:BE="clr-namespace:BE;assembly=BE"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="{Binding Path=SiteName}"
    Closing="Window_Closing">
    <Window.DataContext>
        <BE:Configuration/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" x:Name="HeaderGrid" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Content="הוספת דרישת לקוח" Grid.Column="1" HorizontalAlignment="Left" Margin="120,127,0,0" Grid.Row="1" VerticalAlignment="Top"  Click="Button_Click"/>
        <Button Content="כניסת מארח" Grid.Column="0" HorizontalAlignment="Left" Margin="145,127,0,0" Grid.Row="1" VerticalAlignment="Top"  Click="Button_Click_1"/>
        <local:Header Grid.Row="0" Grid.ColumnSpan="2"></local:Header>
    </Grid>

</Window>
